<div id="rel-{{ relation.id }}" class="union">
	<div class="marriage">
		<div class="logo">
			{% if relation.type is constant('TYPE_MARRIAGE', relation) %}
				<img width="15px" src="{{ asset("img/icons/rings.png") }}" alt="Marriage">
			{% elseif relation.type is constant('TYPE_PACS', relation) %}
				PACS
			{% elseif relation.type is constant('TYPE_FREE', relation) %}
				<img width="15px" src="{{ asset("img/icons/heart.png") }}" alt="Free union">
			{% endif %}
		</div>
		<div class="date">
			{% if relation.start %}
				{{ relation.start | localizeddate('medium', 'none') }}
			{% else %}
				<br>
			{% endif %}
		</div>
	</div>
</div>