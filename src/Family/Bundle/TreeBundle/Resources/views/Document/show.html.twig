{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Document</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Uploaddate</th>
                <td>{{ entity.uploadDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ entity.path }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset(entity.webPath) }}" alt="{{ entity.name }}"></td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('crud_document') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('crud_document_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
