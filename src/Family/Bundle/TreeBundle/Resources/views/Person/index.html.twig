{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Person list</h1>
    <ul>
        <li>
            <a href="{{ path('crud_person_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Middlenames</th>
                <th>Lastname</th>
                <th>Surname</th>
                <th>Sex</th>
                <th>Birthdate</th>
                <th>Deathdate</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('crud_person_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.middleNames }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.surName }}</td>
                <td>{{ entity.sex }}</td>
                <td>{% if entity.birthDate %}{{ entity.birthDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.deathDate %}{{ entity.deathDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.notes }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('crud_person_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('crud_person_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('crud_person_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
