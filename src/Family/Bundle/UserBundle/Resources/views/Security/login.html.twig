{% extends 'FamilyUserBundle::layout.html.twig' %}
 
{% trans_default_domain 'FOSUserBundle' %}

{% block titre %}Connexion{% endblock %}

{% block soustitre %}
	<a href="{{  path('family_main_homepage') }}">
		Retour à l'accueil
	</a>
	<span class="pull-right">
		Si vous n'avez pas de compte, <a href="{{ path("fos_user_registration_register") }}">enregistrez-vous</a> !
	</span>
{% endblock %}

{% block fos_user_content %}
    {# fichier login.html.twig de base du FOSUserBundle #}
 
	{% if error %}
	    <div class="alert alert-danger">{{ error|trans }}</div>
	{% endif %}

    {# render 'FOSUserBundle:Security:login' #}

    <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		<div class="form-group">
		    <label for="username" class="col-sm-4 control-label">{{ 'security.login.username'|trans }}</label>
		    <div class="col-sm-4">
		    	<input type="text" class="form-control" placeholder="Pseudonyme" id="username" name="_username" value="{{ last_username }}" required="required" />
		    </div>
	    </div>
	    
		<div class="form-group">
		    <label for="password" class="col-sm-4 control-label">{{ 'security.login.password'|trans }}</label>
		    <div class="col-sm-4">
		    	<input class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" required="required" />
		    </div>
	    </div>

		<div class="form-group">
		    <div class="col-sm-4 col-sm-offset-4">
			    <label class="checkbox">
				    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
				    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
			    </label>
		    </div>
	    </div>

		<div class="form-group">
		    <div class="col-sm-4 col-sm-offset-4">
			    <a href="{{ path("fos_user_resetting_request") }}"> Mot de passe oublié ?</a>
			    <br>
			    <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
		    </div>
	    </div>
	</form>

{% endblock %}

